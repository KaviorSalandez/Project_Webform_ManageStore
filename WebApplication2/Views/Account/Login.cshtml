@model WebApplication2.Models.Account;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="formLogin">
        <form style="height:620px" asp-action="Login" method="post">
            <h3>Đăng Nhập</h3>
            @if (ViewBag.MessageLogin != null)
            {
                <p style="color: red; margin-bottom:0px">@ViewBag.MessageLogin</p>
            }
            <label style="margin-top:0px" for="username">Email</label>
            <span asp-validation-for="Email"></span>
            <input class="login" type="text" asp-for="Email" placeholder="Email or Phone">

            <label for="pasword">Password</label>
            <span asp-validation-for="Pasword"></span>
            <input class="login" type="password" asp-for="Pasword" placeholder="Password">

            <button type="submit">Đăng nhập</button>
            @*  <div style="display:flex;justify-content:center;" class="social">
            <a href="#">
            <i style="font-size:30px" class="fab fa-google"></i>
            </a>
            </div>*@
            @*<div style="margin-top:10px;display: flex; justify-content:end">
                <a asp-action="Reset">quên mật khẩu</a>
            </div>*@
            <div style="margin-top:10px;display: flex; justify-content:center">
                <p>Bạn chưa có tài khoản?<a asp-action="Register">Đăng ký</a></p>
            </div>
        </form>
    </div>

</body>
</html>
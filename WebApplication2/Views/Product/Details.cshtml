@model WebApplication2.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết sản phẩm</h1>

<div>
    <h4>Bàn phím</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên sản phẩm:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Giá sản phẩm: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Mô tả chi tiết:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descrip)
        </dd>
        <dt class = "col-sm-2">
            Số lượng trong kho:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            Ảnh minh họa:
        </dt>
        <dd class = "col-sm-10">
            <img src="~/image/@Html.DisplayFor(model => model.Image)" alt="Chưa có ảnh đâu hehe" width="300px" height="300px"></img>
        </dd>
        <dt class = "col-sm-2">
            Thương hiệu:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BidNavigation.Name)
        </dd>
        <dt class = "col-sm-2">
            Thể loại:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CidNavigation.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
